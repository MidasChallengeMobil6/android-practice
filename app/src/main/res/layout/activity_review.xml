<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ReviewActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Theme.AppCompat.Light"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/review_background"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="커리큘럼"
                android:textSize="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/curriculum_ratingbar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.1"
                android:progressTint="@color/ratingyellow"
                android:secondaryProgressTint="@color/ratingsecondarygray"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="8dp"
                android:text="준비성"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/ready_ratingbar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:isIndicator="false"
                android:numStars="5"
                android:progressTint="@color/ratingyellow"
                android:rating="5"
                android:stepSize="0.1"
                android:secondaryProgressTint="@color/ratingsecondarygray"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="8dp"
                android:text="시간준수"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/time_ratingbar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:isIndicator="false"
                android:numStars="5"
                android:progressTint="@color/ratingyellow"
                android:rating="5"
                android:stepSize="0.1"
                android:secondaryProgressTint="@color/ratingsecondarygray"
                /><!-- 이 progressTint에 white를 추가해야 java코드에서 색을 수정할 수 있습니다.-->

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"/>

    <EditText
        android:id="@+id/review_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="리뷰를 남겨주세요. "
        android:gravity="left|top"
        android:padding="16dp"
        android:background="@color/review_background"/>


</LinearLayout>